.myRecode{
  text-align: center;
  box-sizing: border-box;
}
.myRecode .recode{
  display: inline-block;
  width:120rpx;
  height:120rpx;
  background: rgb(74, 231, 95);
  border-radius: 50%;
  text-align: center;
  color:#fff;
  line-height: 200rpx;
  position: relative;
}
.ripple{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  border-radius: 50%;
  border:2px solid #F6F1CC;
}
.img{
  position: absolute;
  width: 37.6rpx;
  height: 60rpx;
  margin-top: 30rpx;
  margin-left: -15rpx;
}
